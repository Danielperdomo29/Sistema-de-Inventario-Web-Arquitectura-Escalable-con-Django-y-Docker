# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# ============================================================================
# DJANGO SETTINGS
# ============================================================================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# FEATURE FLAGS (Migración Incremental)
# ============================================================================
# Activar nueva estructura de settings modular
USE_NEW_SETTINGS=False

# Activar django-allauth (solo si USE_NEW_SETTINGS=True)
ENABLE_ALLAUTH=False

# Nivel de verificación de email: 'none', 'optional', 'mandatory'
ENABLE_EMAIL_VERIFICATION=none

# Entorno: development, production, test
DJANGO_ENV=development

# Site Configuration (para django-allauth)
SITE_DOMAIN=localhost:8000
SITE_NAME=Sistema de Inventario

# ============================================================================
# EMAIL CONFIGURATION (Solo si ENABLE_ALLAUTH=True)
# ============================================================================
# Backend de email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Configuración SMTP (para producción)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@inventario.com

# ============================================================================
# API KEYS
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# REDIS & CELERY (Opcional - Para tareas asíncronas)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

